<project name="build-properties" default="" basedir="..">

	<!-- Name and Version Properties -->
	<property name="project.name" value="${ant.project.name}" />
	<property name="dependencies.dir" value=".." description="Dependent projects location" />
	
	<!-- Source Tree Properties -->
	<property name="source.dir" value="src/main/java" />
	<property name="source.test.dir" value="src/test/java" />
	
	<property name="lib.dir" value="src/main/resources" />
	<property name="lib.test.dir" value="src/test/resources" />
	
	<property name="doc.dir" value="doc" />
	
	<!-- Build Area Properties -->

	<property name="build.dir" value="build" />
	<property name="build.classes.dir" value="${build.dir}/classes" />
	<property name="build.javadoc.dir" value="${build.dir}/doc/api" />
	<property name="build.distribution.dir" value="${build.dir}/distribution" />
	
	<!-- Temporary directories used during the build process -->
	<property name="code-analysis.dir" value="${build.dir}/code-analysis" />
	
</project>